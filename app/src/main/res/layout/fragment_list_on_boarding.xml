<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ListOnBoardingFragment">


    <LinearLayout
        android:id="@+id/ob_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/whistle"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/head_title"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:text="Wide Selection of Activities"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="34dp"/>

        <TextView
            android:id="@+id/small_title"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:text="Wide ranging courses from Arts, Dance, Music, Workshops"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>





