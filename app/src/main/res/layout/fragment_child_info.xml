<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.authentication.signIn.ChildInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginVertical="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_backicon" />

            <ProgressBar
                android:id="@+id/scoreBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="12dp"
                android:layout_toRightOf="@id/btn_close"
                android:layout_centerVertical="true"
                android:progress="63"
                android:progressDrawable="@drawable/signup_progress" />

        </RelativeLayout>

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/header"
            android:fontFamily="@font/poppins_regular"
            android:text="Your kid's name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/hind_regular"
            android:text="Enter your child's name"
            android:textColor="#A8A8A8"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profileImg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_below="@id/small_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/grey"
            android:elevation="20dp"
            android:alpha="0.6"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_img"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/addPhotoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImg"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Add Image"
            android:textColor="@color/primaryCTS"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/nameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="46dp"
            android:layout_below="@id/addPhotoText"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_regular"
                android:text="Full name"
                android:textColor="#A8A8A8"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/ic_textbox"
                android:drawableBottom="@color/transparent"
                android:fontFamily="@font/hind_regular"
                android:hint=""
                android:paddingLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="19dp"
            android:layout_below="@id/nameBox"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_regular"
                android:text="Unique WeSkill Id*"
                android:textColor="#A8A8A8"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/weskillId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/ic_textbox"
                android:drawableBottom="@color/transparent"
                android:fontFamily="@font/hind_regular"
                android:hint=""
                android:paddingLeft="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/self_learning_bg_gray">

            <RelativeLayout
                android:id="@+id/NextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="16dp"
                android:layout_weight="1"
                android:background="@drawable/ic_signinbtn"
                android:elevation="4dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/check_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/book_text"
                    android:paddingLeft="6dp"
                    android:src="@drawable/ic_round_check"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressBook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/book_text"
                    android:indeterminateTint="@color/white"
                    android:paddingLeft="10dp"
                    android:visibility="gone">

                </ProgressBar>

                <TextView
                    android:id="@+id/book_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>